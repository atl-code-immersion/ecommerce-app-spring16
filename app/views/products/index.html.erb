<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Quantity</th>
      <th>Description</th>
      <th>Brand</th>
      <th>Category</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.name, product %></td>
        <td><%= number_to_currency product.price %></td>
        <td><%= product.quantity %></td>
        <td><%= product.description %></td>
        <td><%= link_to product.brand, branding_path(name: product.brand) %></td>
        <td><%= link_to product.category.name, categorical_path(id: product.category.id) %></td>
        <td><%= link_to 'Edit', edit_product_path(product) if can? :update, Product %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' }  if can? :destroy, Product%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if can? :create, Product %>
  <%= link_to 'New Product', new_product_path %>
<% end %>



