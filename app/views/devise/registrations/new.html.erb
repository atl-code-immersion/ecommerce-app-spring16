<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group">
    <%= f.email_field :email, placeholder: "Email Address", autofocus: true, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.hidden_field :role, value: "guest" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password, placeholder: "Password ( #{@minimum_password_length} characters minimum )", class: "form-control", autocomplete: "off" %>
  </div>

  <div class="form-group">
    <%= f.password_field :password_confirmation, placeholder: "Password Confirmation", class: "form-control", autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-info" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
